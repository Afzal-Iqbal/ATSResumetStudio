/**
 * @fileoverview Firestore Security Rules for ResuMaster application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and resumes.
 * Resume templates are publicly readable, but only writeable by backend/admin (not implemented in this prototype).
 *
 * Data Structure:
 * - /userProfiles/{userId}: Stores user profile information, with the document ID matching the Firebase Auth UID.
 * - /userProfiles/{userId}/resumes/{resumeId}: Stores resumes owned by the user.  Each resume document contains a `userProfileId` that MUST match the parent path.
 * - /resumeTemplates/{templateId}: Stores publicly available resume templates.
 *
 * Key Security Decisions:
 * - Users can only read/write their own profile data and resumes.
 * - Resume templates are publicly readable.
 * - User listing is disallowed (to protect user privacy).
 *
 * Denormalization for Authorization:
 * - Resumes store the `userProfileId` directly on the document. This enables rules to validate ownership without additional `get()` operations.
 *
 * Structural Segregation:
 * - Public resume templates are stored in a separate top-level collection from private user resumes.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /userProfiles/{userProfileId}
     * @allow (create) User with matching UID can create their own profile.
     * @allow (get, update, delete) User with matching UID can access their own profile.
     * @deny (create) User cannot create a profile with a different UID.
     * @deny (get, update, delete) User cannot access another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /userProfiles/{userProfileId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userProfileId);
      allow list: if false;

      allow create: if isOwner(userProfileId)
                    && request.resource.data.id == userProfileId;

      allow update: if isExistingOwner(userProfileId)
                    && request.resource.data.id == resource.data.id;

      allow delete: if isExistingOwner(userProfileId);
    }

    /**
     * @description Controls access to resume documents within a user's profile.
     * @path /userProfiles/{userProfileId}/resumes/{resumeId}
     * @allow (create) User with matching UID can create a resume under their profile.
     * @allow (get, update, delete) User with matching UID can access their own resumes.
     * @deny (create) User cannot create a resume under another user's profile.
     * @deny (get, update, delete) User cannot access another user's resumes.
     * @principle Enforces document ownership for all operations, validates relational integrity.
     */
    match /userProfiles/{userProfileId}/resumes/{resumeId} {
        function isSignedIn() {
          return request.auth != null;
        }

        function isOwner(userId) {
          return isSignedIn() && request.auth.uid == userId;
        }

        function isExistingOwner(userId) {
            return isOwner(userId) && resource != null;
        }

        allow get: if isOwner(userProfileId);
        allow list: if isOwner(userProfileId);

        allow create: if isOwner(userProfileId)
                      && request.resource.data.userProfileId == userProfileId;

        allow update: if isExistingOwner(userProfileId)
                      && request.resource.data.userProfileId == resource.data.userProfileId;

        allow delete: if isExistingOwner(userProfileId);
    }

    /**
     * @description Controls access to resume template documents.
     * @path /resumeTemplates/{resumeTemplateId}
     * @allow (get, list) Any user can read resume templates.
     * @deny (create, update, delete) Only backend/admin can modify resume templates (not implemented in this prototype).
     * @principle Allows public read access, restricts write access.
     */
    match /resumeTemplates/{resumeTemplateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}